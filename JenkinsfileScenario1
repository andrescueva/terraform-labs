pipeline {
    agent {
        kubernetes {
            yaml '''
            apiVersion: v1
            kind: Pod
            spec:
                containers:
                - name: terraform
                  image: hashicorp/terraform:1.5.0
                  command: 
                  - cat
                  tty: true

            '''
        }
    }

    stages { 
        stage('Terraform plan') {
            steps {
                container('terraform'){
                    sh 'terraform -chdir=scenario1 init'
                    sh 'terraform -chdir=scenario1 plan -out output --var-file=prod.tfvars'
                }
            }
        }
         stage('Terraform ls') {
            steps {
                container('terraform'){
                    sh 'ls scenario1'
                }
            }
        } 
    }

}