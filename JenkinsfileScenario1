pipeline {
    agent {
        kubernetes {
            yaml '''
            apiVersion: v1
            kind: Pod
            spec:
                containers:
                - name: terraform
                  image: hashicorp/terraform:1.5.0
                  command: 
                  - cat
                  tty: true

            '''
        }
    }

    stages {
        stage('Terraform init') {
            steps {
                container('terraform'){
                    sh 'terraform -chdir=scenario1 init'
                }
            }
        }  
        stage('Terraform plan') {
            steps {
                container('terraform'){
                    sh 'terraform -chdir=scenario1 plan -out output --var-file=prod.tfvars'
                }
            }
        }  
    }

}