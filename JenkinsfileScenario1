pipeline {
    agent {
        kubernetes {
            yaml '''
            apiVersion: v1
            kind: Pod
            spec:
                containers:
                - name: terraform
                  image: hashicorp/terraform:1.5.0
                  command: 
                  - cat
                  tty: true

            '''
        }
    }

    stages {
        stage('Terraform init') {
            steps {
                container('terraform'){
                    sh 'terraform -version'
                    sh 'cd ./scenario1'
                    sh 'terraform init'
                }
            }
        }  
        stage('Terraform plan') {
            steps {
                container('terraform'){
                    sh 'ls ./scenario1'
                    sh 'cd ./scenario1'
                    sh 'terraform init'
                    sh 'terraform plan'
                }
            }
        }  
    }

}